<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="@dimen/pulsation_area_size"
  android:clipChildren="false">

  <ImageView
    android:id="@+id/pulse_small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:srcCompat="@drawable/pulsation_circle" />

  <ImageView
    android:id="@+id/pulse_medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:srcCompat="@drawable/pulsation_circle" />

  <ImageView
    android:id="@+id/pulse_large"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:srcCompat="@drawable/pulsation_circle" />

  <ImageView
    android:layout_width="@dimen/home_page_main_icon_size"
    android:layout_height="@dimen/home_page_main_icon_size"
    android:layout_gravity="center"
    android:contentDescription="@string/no_recent_exposure_indicator"
    app:srcCompat="@drawable/ic_no_exposure_checkmark" />

</FrameLayout>