<com.google.android.material.card.MaterialCardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/notify_others_card"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:layout_marginVertical="@dimen/padding_normal"
  android:background="@drawable/card_background"
  app:cardCornerRadius="@dimen/card_corner_radius"
  app:strokeColor="@color/card_border_color"
  app:strokeWidth="@dimen/card_border_width">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingHorizontal="@dimen/padding_normal"
      android:paddingVertical="@dimen/padding_normal"
      android:layout_gravity="center"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_test_result"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textStyle="bold"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
          android:layout_width="@dimen/card_icon_size"
          android:layout_height="@dimen/card_icon_size"
          android:contentDescription="@string/share_test_result"
          app:srcCompat="@drawable/ic_banner_circle" />

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_gravity="center"
          android:text="@string/share_test_result_card_content"
          android:textAppearance="?attr/textAppearanceBody2"
          android:textColor="?attr/colorControlNormal" />

      </LinearLayout>

      <Button
        android:id="@+id/notify_others_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingHorizontal="@dimen/padding_large"
        android:text="@string/notify_others_card_button"
        app:cornerRadius="@dimen/round_button_corner_radius" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/view_flipper_divider"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <include layout="@layout/horizontal_divider" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/diagnosis_history_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="@dimen/padding_normal"
      android:orientation="vertical">

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notify_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"/>

    </LinearLayout>

  </LinearLayout>

</com.google.android.material.card.MaterialCardView>