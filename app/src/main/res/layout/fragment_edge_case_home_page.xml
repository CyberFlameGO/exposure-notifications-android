<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:paddingHorizontal="@dimen/padding_normal"
  android:paddingVertical="@dimen/padding_normal"
  android:orientation="vertical">

  <TextView
    android:id="@+id/edge_case_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/en_off_card_title"
    android:textAppearance="?attr/textAppearanceSubtitle1"
    android:textStyle="bold"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="@dimen/card_icon_size"
      android:layout_height="@dimen/card_icon_size"
      android:contentDescription="@string/en_off_card_title"
      app:srcCompat="@drawable/ic_banner_notification" />

    <TextView
      android:id="@+id/edge_case_content"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_gravity="center"
      android:text="@string/en_off_card_content"
      android:textAppearance="?attr/textAppearanceBody2"
      android:textColor="?attr/colorControlNormal" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
      android:id="@+id/how_en_work_button"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.7"
      android:layout_marginEnd="@dimen/padding_small"
      android:layout_gravity="center"
      android:gravity="center|end"
      android:text="@string/how_en_work"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      app:cornerRadius="@dimen/round_button_corner_radius"  />

    <Button
      android:id="@+id/edge_case_action_button"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_gravity="center"
      android:text="@string/btn_turn_on"
      app:cornerRadius="@dimen/round_button_corner_radius" />

  </LinearLayout>

</LinearLayout>