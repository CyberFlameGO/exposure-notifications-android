<resources>

  <style name="TextAppearance.ExposureNotification.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
    <item name="fontFamily">@font/google_sans_regular</item>
    <item name="android:fontFamily">@font/google_sans_regular</item>
  </style>

  <style name="TextAppearance.ExposureNotification.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
    <item name="fontFamily">@font/google_sans_regular</item>
    <item name="android:fontFamily">@font/google_sans_regular</item>
  </style>

  <style name="TextAppearance.ExposureNotification.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
    <item name="fontFamily">@font/google_sans_regular</item>
    <item name="android:fontFamily">@font/google_sans_regular</item>
  </style>

  <style name="TextAppearance.ExposureNotification.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
    <item name="fontFamily">@font/google_sans_regular</item>
    <item name="android:fontFamily">@font/google_sans_regular</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>

  <style name="TextAppearance.ExposureNotification.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
    <item name="fontFamily">@font/google_sans_regular</item>
    <item name="android:fontFamily">@font/google_sans_regular</item>
  </style>

  <style name="TextAppearance.ExposureNotification.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
    <item name="fontFamily">@font/google_sans_regular</item>
    <item name="android:fontFamily">@font/google_sans_regular</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="TextAppearance.ExposureNotification.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
    <item name="fontFamily">@font/google_sans_regular</item>
    <item name="android:fontFamily">@font/google_sans_regular</item>
  </style>

  <style name="TextAppearance.ExposureNotification.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
    <item name="fontFamily">@font/google_sans_medium</item>
    <item name="android:fontFamily">@font/google_sans_medium</item>
  </style>

  <style name="TextAppearance.ExposureNotification.Body1" parent="TextAppearance.MaterialComponents.Body1">
    <item name="fontFamily">@font/roboto_regular</item>
    <item name="android:fontFamily">@font/roboto_regular</item>
  </style>

  <style name="TextAppearance.ExposureNotification.Body2" parent="TextAppearance.MaterialComponents.Body2">
    <item name="fontFamily">@font/roboto_regular</item>
    <item name="android:fontFamily">@font/roboto_regular</item>
  </style>

  <style name="TextAppearance.ExposureNotification.Button" parent="TextAppearance.MaterialComponents.Button">
    <item name="fontFamily">@font/google_sans_medium</item>
    <item name="android:fontFamily">@font/google_sans_medium</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="TextAppearance.ExposureNotification.Caption" parent="TextAppearance.MaterialComponents.Caption">
    <item name="fontFamily">@font/roboto_regular</item>
    <item name="android:fontFamily">@font/roboto_regular</item>
  </style>

  <style name="TextAppearance.ExposureNotification.Overline" parent="TextAppearance.MaterialComponents.Overline">
    <item name="fontFamily">@font/roboto_medium</item>
    <item name="android:fontFamily">@font/roboto_medium</item>
  </style>

  <style name="TextAppearance.ExposureNotification.ListItem" parent="TextAppearance.MaterialComponents.Body2">
    <item name="fontFamily">@font/google_sans_regular</item>
    <item name="android:fontFamily">@font/google_sans_regular</item>
  </style>

  <style name="TextAppearance.ExposureNotification.ListItemSecondary" parent="TextAppearance.MaterialComponents.Body1">
    <item name="fontFamily">@font/roboto_regular</item>
    <item name="android:fontFamily">@font/roboto_regular</item>
  </style>

  <style name="VerificationCodeOutlinedBox"
    parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
    <item name="android:textSize">40sp</item>
  </style>

  <style name="OnsetDateOutlinedBox"
    parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
    <item name="android:textSize">30sp</item>
  </style>


  <!-- EXPOSURE NOTIFICATION ALERT DIALOG STYLES -->
  <!-- Dialog Title -->
  <style name="AlertDialogTitleTextAppearance" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:ellipsize">marquee</item>
    <item name="android:gravity">center</item>
    <item name="android:fontFamily">"@font/google_sans_medium"</item>
    <item name="android:textSize">20sp</item>
    <item name="android:paddingTop">@dimen/padding_large</item>
    <item name="android:paddingBottom">@dimen/padding_large</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>

  <!-- Dialog Message -->
  <style name="AlertDialogMessageTextAppearance" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:ellipsize">marquee</item>
    <item name="android:fontFamily">"@font/roboto_regular"</item>
    <item name="android:gravity">start</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>

  <!-- Dialog Buttons -->
  <style name="AlertDialogButtonTextAppearance" parent="@style/Widget.MaterialComponents.Button.TextButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:ellipsize">marquee</item>
    <item name="android:fontFamily">"@font/google_sans_medium"</item>
    <item name="android:textSize">14sp</item>
    <item name="android:paddingStart">@dimen/padding_normal</item>
    <item name="android:paddingEnd">@dimen/padding_normal</item>
    <item name="android:paddingBottom">@dimen/padding_small</item>
    <item name="android:minHeight">@dimen/touch_area_min_size</item>
    <item name="android:textColor">@color/colorPrimary</item>
  </style>

  <!-- Dialog Theme -->
  <style name="ExposureNotificationAlertDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog.Centered">
    <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleTextAppearance</item>
    <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogMessageTextAppearance</item>
    <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonTextAppearance</item>
    <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonTextAppearance</item>
  </style>

</resources>
