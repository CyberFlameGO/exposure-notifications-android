<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/padding_normal"
  android:background="@drawable/semantic_banner_background"
  android:contentDescription="@string/exposure_notifications_is_off"
  android:orientation="vertical">

  <ImageView
    android:layout_width="@dimen/active_app_screen_card_icon_size"
    android:layout_height="@dimen/active_app_screen_card_icon_size"
    android:layout_marginStart="@dimen/padding_micro"
    android:layout_gravity="start"
    android:contentDescription="@null"
    android:importantForAccessibility="no"
    app:srcCompat="@drawable/ic_exposure_notification"
    app:tint="@color/semantic_banner_tint_color" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_micro"
    android:layout_gravity="start"
    android:layout_marginTop="@dimen/padding_medium"
    android:text="@string/exposure_notifications_is_off"
    android:textAppearance="?attr/textAppearanceSubtitle1" />

</LinearLayout>